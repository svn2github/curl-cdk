{curl 7.0 applet}
{applet manifest = "../manifest.mcurl",
    {compiler-directives careful? = true}}

{import * from COM.CURL.CDK.DATA-OBJECT}
  
{def product-traits =
    {DataObjectTraits "COM.CURL.WORK.Product",
        dynamic? = false,
        {StringArray 
            "id",
            "name",
            "price"}}
}

{define-proc {test-modify obj:DataObject}:#Exception
    {return
        {try
            set obj["x"] = false
            null
         catch e:Exception do
            e}}
}

{define-proc {describe obj:DataObject}:Graphic
    def traits = obj.traits
    {return
        {Table columns = 2,
            {text dynamic?},
            traits.dynamic?,
            {text type},
            {type-of obj},
            {text test-modify},
            {test-modify obj}
        }}
}

{value
    def obj =
        {DataObject
            id = 1,
            name = "paper",
            price = 10.00}
    {describe obj}
}

{value
    def obj =
        {DataObject traits = product-traits,
            id = 1,
            name = "paper",
            price = 10.00}
    {describe obj}
}