{define-class public ChannelFaultEvent {inherits ChannelEvent}
  field public constant fault-code:#String
  field public constant fault-detail:#String
  field public constant fault-string:#String
  field public constant root-cause:any

  let public constant FAULT:String = "channelFault" ||""

  {constructor public {default
                          type:String,
                          channel:#Channel = null,
                          reconnecting?:bool = false,
                          rejected?:bool = false,
                          connected?:bool = false,
                          code:#String = null,
                          level:#String = null,
                          description:#String = null,
                          root-cause:any = null
                      }
    {construct-super
        type,
        channel = channel,
        reconnecting? = reconnecting?,
        rejected? = rejected?,
        connected? = connected?
    }
    set self.fault-code = code
    set self.fault-string = level
    set self.fault-detail = description
    set self.root-cause = root-cause
  }

}
